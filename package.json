    "license": "MIT",
    "bugs": {
        "url": "https://github.com/adambertrandberger/ldoc/issues"
    },
    "homepage": "https://github.com/adambertrandberger/ldoc#readme",
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.4",
        "@babel/node": "^7.2.2",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/polyfill": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/runtime": "^7.4.4",
        "babel-loader": "^8.0.6",
        "onchange": "^6.0.0",
        "webpack": "^4.31.0",
        "webpack-cli": "^3.3.2",
        "http-server": "^0.11.1"
    },
    "dependencies": {
        "l-html": "^1.0.4",
        "marked": "^4.0.10"
