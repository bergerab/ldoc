{
    "name": "ldoc-html",
    "version": "1.0.7",
    "description": "Create navigation enabled HTML documents",
    "main": "dist/ldoc.js",
    "scripts": {
        "build": "webpack --mode=production",
        "watch": "onchange 'src/**/*.js' -- npm run build",
        "dev-watch": "onchange 'src/**/*.js' -- npm run dev-build",
        "start": "http-server",
        "dev-build": "webpack --mode=development"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adambertrandberger/ldoc.git"
    },
    "keywords": [
